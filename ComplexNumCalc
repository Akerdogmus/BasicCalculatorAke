#include <stdio.h>
#include <conio.h>
int main(void)
{
char c,i;
float a1,a2,b1,b2,r,p,z;
printf("Lab 6 Experiment=Basic Calculator by Ake\n");
printf("________________________________________\n");
printf("Enter operator:");
scanf("%c",&c);
printf("Real value of 1.complex number:");
scanf("%f",&a1);
printf("Imaginer value of 1.complex number:");
scanf("%f",&a2);
printf("Real value of 2.complex number:");
scanf("%f",&b1);
printf("Imaginer value of 2.complex number:");
scanf("%f",&b2);
if(c=='+')
{
r=a1+b1;
printf("r=%f",r);
p=a2+b2;
printf("p=%f",p);
} else if(c=='-')
{
r=a1-b1;
printf("r=%f",r);
p=a2-b2;
printf("p=%f",p);
} else if(c=='*')
{
r=(a1*b1)-(a2*b2);
printf("r=%f",r);
p=(a1*b2)+(a2*b1);
printf("p=%f",p);
} if (
p<0)
printf("%2.3f %2.3fi",r,p);
else
printf("%2.3f+%2.3fi",r,p);
getch();
return 0;
}
